!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title= ApplicationController.title
    = csrf_meta_tags
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = stylesheet_link_tag 'bootstrap.min'
    = stylesheet_link_tag 'bootstrap-theme.min'
    = stylesheet_link_tag 'base'
    
  %body
    %nav{class: 'navbar navbar-inverse navbar-inverse-no-radius'}
      %div{class: 'container-fluid'}
        %div{class: 'navbar-header'}
          %a{class: 'navbar-brand', href: '#'}= ApplicationController.title
          %ul{class: 'nav navbar-nav'}
            - contextualize link: '/', title: 'Layout Demo'
    = yield

    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'bootstrap.min'
    
