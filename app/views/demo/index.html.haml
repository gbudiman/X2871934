%div{class: 'col-xs-12 col-sm-4 col-md-3 col-lg-2'}
  %div{class: 'div-height-limited', id: 'step1'}
  %div{class: 'text-muted fetching', id: 'step1-loading'} Fetching data...
  %button{class: 'btn btn-primary btn-block init-hidden', id: 'step1-next', disabled: true} Make Selection First

%div{class: 'col-xs-12 col-sm-8 col-md-9 col-lg-10 div-height-limited', id: 'step2'}
  %div{class: 'jumbotron non-container', id: 'step2-placeholder'} 
    %div{class: 'container'}
      %h1
        %span{class: 'text-muted'} &laquo; Make Some Selection

  %div{class: 'col-xs-12 fetching text-muted init-hidden', id: 'step2-loading'} Fetching Query Set...

  %div{class: 'alert alert-success init-hidden', id: 'step2-summary'}

%div{class: 'init-hidden col-xs-12 col-sm-6 boxed div-height-limited', id: 'step3'}
  %div{class: 'col-xs-12 fetching text-muted init-hidden', id: 'step3-loading'} Fetching Retrieve Set...
  %div{class: 'col-xs-12 fetching text-muted init-hidden', id: 'step3-end'} End of Retrieve Set

  %div{class: 'alert alert-success init-hidden', id: 'step3-summary'}